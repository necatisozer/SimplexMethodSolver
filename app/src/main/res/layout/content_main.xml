          android:layout_height="wrap_content"
          android:inputType="numberDecimal"
          android:background="@null"
          tools:text="99.99"
          android:ems="2"
          android:id="@+id/edittext_main_e1x1"
          android:gravity="center"
          style="@android:style/Widget.Material.EditText"/>

